@using ECommerceShoppingCartMVC.Models @*For tblProduct Class*@
@using PagedList.Mvc; @*//import this so we get our HTML Helper*@
@using PagedList; @*//import this so we can cast our list to IPagedList (only necessary because ViewBag is dynamic)*@

@{
    ViewBag.Title = "Lista produse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- import the included stylesheet for some (very basic) default styling -->
<link href="~/Content/PagedList.css" rel="stylesheet" />
@*Heading*@
<h2 class="wow pulse">Alege proodusul din lista</h2>

@*Products*@
<table class="table table-striped table-hover wow slideInLeft" style=" width:35%;">
    <tr>
        <th>Nume</th>
        <th>Pret</th>
        <th>Cumpara</th>
    </tr>
    @*Retrieve products from the ViewBag*@
    @foreach (Produse p in ViewBag.ListProducts)
    {
        <tr>
            <td>@p.Nume</td>
            <td>£ @Math.Round(p.Pret, 2)</td>
            <td>
                @Html.ActionLink("Comanda acum", "Add", "CosCumparaturi", new { id = p.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)ViewBag.ListProducts, page => Url.Action("Index", new { page }))
